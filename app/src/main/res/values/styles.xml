<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textColor">@color/colorFacebook</item>
        <item name="android:background">@drawable/bg_facebook</item>
        <item name="android:drawableStart">@drawable/ic_facebook_logo</item>
        <item name="android:text">@string/sign_in_facebook</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawableTint">@color/colorFacebook</item>
    </style>

    <style name="ProfileEditTextTheme">
        <item name="colorControlNormal">@color/colorProfileText</item>
        <item name="android:textColorPrimary">@color/colorProfileText</item>
        <item name="android:textColorHint">@color/colorProfileText</item>
    </style>

    <style name="ProfileEditText">
        <item name="android:theme">@style/ProfileEditTextTheme</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/rbt_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
